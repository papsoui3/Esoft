<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="pdfTitle"
            type="java.lang.String" />
    </data>
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="291dp"
        tools:ignore="InOrMmUsage"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75sp"
            android:layout_marginTop="20dp"
            android:text="CASH INVOICE"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="page 1 of 1"
            android:textSize="5sp"
            android:layout_marginLeft="160sp"
            android:layout_marginTop="10sp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:background="@color/teal_700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fdfd"
                    android:textSize="5sp" />

                <TextView

                    android:id="@+id/telephone"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="Telephone"
                    android:textSize="5sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="vertical">
                <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:orientation="horizontal">

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="8dp"
                        android:text="Doc.No/Αρ. Εγγραφου"
                        android:textSize="5sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=": No"
                        android:textSize="5sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="8dp"
                        android:text="Doc.Date"
                        android:textSize="5sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="8dp"
                        android:text=": No"
                        android:textSize="5sp" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header row -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Item/Προιον"
                    android:textSize="6sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:text="Description/Περιγραφη"
                    android:textSize="6sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Column 3"
                    android:textSize="6sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Column 4"
                    android:textSize="6sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Column 5"
                    android:textSize="6sp" />
            </TableRow>




            <!-- Add rows and data dynamically -->

        </TableLayout>




    </LinearLayout>
    <!-- Rest of your XML layout here -->
</layout>

